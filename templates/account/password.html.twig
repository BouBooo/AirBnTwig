{% extends 'base.html.twig' %}

{% block body %}

<div class="container clearfix">
    <h1 class="my-5 text-center">Modification du mot de passe</h1>

    {{ form_start(form) }}

    <div class="password-edit">
        <div class="col">
        {{ form_widget(form) }}
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i>
                Enregistrer
            </button>
        </div>

    </div>



    {{ form_end(form) }}
</div>

{% endblock %}