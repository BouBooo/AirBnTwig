{% extends 'base.html.twig' %}

{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}


<div class="container">
    <h1 class="my-5">Créer une annonce</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2>Informations générales</h2>
                <hr>
                {{ form_row(form.title) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.price) }}
                {{ form_row(form.rooms) }}
            </div>
            <div class="alert alert-light">
                <h2>Détails de l'annonce</h2>
                <hr>
                {{ form_row(form.introduction) }}
                {{ form_row(form.content) }}
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light">
                <h2>Images de l'annonce</h2>
                <hr>
                {{ form_row(form.coverImage) }}
                {{ form_row(form.images) }}
            </div>
        </div>
    </div>

    <div class="action-new text-center">
        <p class="text-center">Vous êtes sur le point de finaliser la création de votre annonce</p>
        <button type="submit" class="btn btn-primary float-center">
            <i class="fas fa-check"></i>
            Créer mon annonce
        </button>
    </div>

    {{ form_end(form) }}

</div>

{% endblock %}


{% block javascripts %}

<script src="/js/ad.js"></script>

{% endblock %}