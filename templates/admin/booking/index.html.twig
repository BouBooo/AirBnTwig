{% extends 'admin/base.html.twig' %}

{% block body %}


<div class="container-fluid">
    <h1 class="my-5">Administration des réservations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Durée</th>
                    <th>Annonce</th>
                    <th>Montant</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for booking in bookings %}
                    
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date('d/m/Y') }}</td>
                    <td style="width:12%">
                        <img src="{{ booking.booker.picture }}" class="avatar avatar-micro mr-2"/>
                        {{ booking.booker.fullName}}
                        
                    </td>
                    <td> {{ booking.getDuration }} jours</td>
                    <td> {{ booking.ad.title }}</td>
                    <td> {{ booking.amount }}€</td>
                    <td style="width: 10%">
                        <div style="justify-content: space-around" class="row">
                            <a href="{{ path('admin_bookings_edit', { 'id' : booking.id } ) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_bookings_delete', { 'id': booking.id } ) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

</div>


{% endblock %}
